<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.laomu.justgraduate.modules.login.LoginActivity">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_id" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:textColorHint="@color/grey"
                style="@style/dark_gray_12"
                android:id="@+id/et_user_id" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_password" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey"
                style="@style/dark_gray_12"
                android:hint="请输入密码"
                android:id="@+id/et_user_password" />

        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/login"
            style="@style/btn_dark_gray_12"
            android:id="@+id/btn_login" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="100dp"
                android:layout_height="1px"
                android:background="@color/standard_dark_gray"></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     或使用以下社交账号快速登录     "
                style="@style/dark_gray_12" />

            <View
                android:layout_width="100dp"
                android:layout_height="1px"
                android:background="@color/standard_dark_gray"></View>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_share_weibo_icon"
                android:id="@+id/btn_signin_by_weibo" />

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/btn_share_qq_friend"
                android:id="@+id/btn_signin_by_qq" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没毕业?"
                style="@style/dark_gray_12"
                android:id="@+id/textView2" />

            <Button
                style="@style/btn_dark_gray_12"
                android:layout_marginLeft="@dimen/page_standard_padding"
                android:text="注册"
                android:id="@+id/btn_signin" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
