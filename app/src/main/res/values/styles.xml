<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>

    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/hyxzyj.ttf</item>
        <item name="android:textScaleX">1.08</item>
    </style>

    <style name="yellow_14">
        <item name="android:textColor">@color/jgyellow</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="dark_gray_12">
        <item name="android:textColor">@color/jg_dark_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btn_dark_gray_12">
        <item name="android:textColor">@color/jg_dark_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rect_white2gray</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="dark_gray_14">
        <item name="android:textColor">@color/jg_dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="yellow_18">
        <item name="android:textColor">@color/jgyellow</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dark_gray_20">
        <item name="android:textColor">@color/jg_dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="white_20">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="title_bar_style">
        <item name="android:background">@drawable/title_bg</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="small_divider">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/small_divider</item>
    </style>

</resources>
