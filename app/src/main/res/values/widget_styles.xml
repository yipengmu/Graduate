<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@color/common_focus_green</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <!-- prize detail start-->

    <style name="PrizeDetailIndicatorsTheme" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/PrizeDetailIndicator</item>
    </style>

    <style name="PrizeDetailIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator_tab_background_red</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/standard_text_size_1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@drawable/indicator_text_color_red</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/standard_indicator_divider</item>
        <item name="android:dividerPadding">@dimen/standard_divider_padding</item>
    </style>

    <!-- prize detail end -->

</resources>
